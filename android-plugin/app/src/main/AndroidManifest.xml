<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Package visibility for Android 11+ -->
    <queries>
        <package android:name="com.maxmpz.audioplayer" />
    </queries>

    <application
        android:name=".PowerampStartRadioApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PowerampStartRadio"
        tools:targetApi="34">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PowerampStartRadio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Radio Service -->
        <service
            android:name=".services.RadioService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="music_radio" />
        </service>

        <!-- Home Screen Widget -->
        <receiver
            android:name=".widget.StartRadioWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/start_radio_widget_info" />
        </receiver>

        <!-- Broadcast receiver for Poweramp track changes -->
        <receiver
            android:name=".poweramp.PowerampReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.maxmpz.audioplayer.TRACK_CHANGED" />
                <action android:name="com.maxmpz.audioplayer.STATUS_CHANGED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
